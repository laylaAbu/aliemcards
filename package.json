{
  "name": "aliemcards",
  "version": "0.2.0",
  "description": "ALiEM Cards deployment scripts and website code.",
  "main": "./dist/index.js",
  "author": "Jeremy Voros",
  "license": "ISC",
  "scripts": {
    "test": "jest --coverage && npm run lint",
    "dev": "gulp __build && node ./dist/index.js",
    "deploy": "torus run ./deploy",
    "start": "node ./dist/index.js",
    "lint": "npm run lint:tslint && npm run lint:eslint && npm run lint:stylint",
    "lint:tslint": "tslint --project . -t codeFrame",
    "lint:eslint": "eslint -f codeframe \"app/**/*.{js,jsx}\" \"server/schema.js\" \"index.js\"",
    "lint:stylint": "stylint app/assets/css",
    "s3": "aws s3 sync ./cards s3://aliemcards --acl public-read --exclude \".*\" --exclude \"*/.*\" --exclude \"*/*.md\" --delete; fi",
    "now-build": "echo build step skipped",
    "build": "gulp __build && NODE_ENV=production webpack"
  },
  "now": {
    "alias": "aliemcards.now.sh",
    "name": "aliemcards",
    "env": {
      "NODE_ENV": "production"
    },
    "files": [
      "dist"
    ]
  },
  "dependencies": {
    "axios": "^0.15.0",
    "body-parser": "^1.16.1",
    "compression": "^1.6.2",
    "express": "^4.14.1",
    "express-graphql": "^0.6.3",
    "fuse.js": "^2.6.2",
    "graphql": "^0.9.0",
    "helmet": "^3.4.0",
    "normalizr": "^3.2.1",
    "typescript": "next"
  },
  "devDependencies": {
    "@types/body-parser": "^0.0.34",
    "@types/compression": "^0.0.33",
    "@types/express": "^4.0.35",
    "@types/express-graphql": "^0.0.33",
    "@types/graphql": "^0.8.6",
    "@types/helmet": "^0.0.33",
    "autoprefixer-stylus": "^0.13.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.3.2",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "css-loader": "^0.26.1",
    "del": "^2.2.2",
    "enzyme": "^2.7.1",
    "eslint": "^3.16.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.1.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "front-matter": "^2.1.2",
    "gulp": "gulpjs/gulp#4.0",
    "gulp-front-matter": "^1.3.0",
    "gulp-image": "^2.7.5",
    "gulp-stylus": "^2.6.0",
    "gulp-util": "^3.0.8",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^19.0.2",
    "marked": "^0.3.6",
    "now": "^4.9.0",
    "offline-plugin": "^4.6.1",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-hot-loader": "^1.3.1",
    "react-router-dom": "^4.0.0-beta.6",
    "react-test-renderer": "^15.4.2",
    "style-loader": "^0.13.1",
    "stylint": "^1.5.9",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "svg-react-loader": "next",
    "ts-node": "^2.0.0",
    "tslint": "^4.4.2",
    "webfontloader": "^1.6.27",
    "webpack": "^2.2.1",
    "webpack-bundle-analyzer": "^2.3.0",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-hot-middleware": "^2.17.0"
  },
  "jest": {
    "globals": {
      "__TEST__": true
    },
    "testRegex": "(/__tests__/.*\\.(js|jsx))$",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "verbose": true,
    "collectCoverageFrom": [
      "app/**/*.{js,jsx}",
      "!**/__tests__/**",
      "!app/**/index.{js,jsx}",
      "!app/App.jsx",
      "!app/utils/**"
    ],
    "coverageDirectory": "tmp/coverage"
  }
}
