@require 'variables'

*, *:before, *:after
    box-sizing: border-box

body
    margin: 0

button
    cursor: pointer
    border: 0
    background: transparent
    outline: none

input,
textarea,
select
    height: 38px
    padding: 6px 10px
    background-color: white
    border: 1px solid $border-color
    border-radius: 2px
    box-shadow: none
    box-sizing: border-box
    &:focus,
    &:active
        outline: 0

select
    cursor: pointer
    background: url(/assets/images/down-caret.svg) no-repeat 95% 50%
    background-size: 16px
    -webkit-appearance: none
    -moz-appearance: none
    appearance: none

input
    font-size: 20px
    padding: 6px 10px
    border-radius: 2px

.wrapper
    display: flex
    flex-direction: column

@media (min-width: 750px)
    .wrapper
        flex-direction: row

.row
    width: 100%
    display: flex
    margin: $block-margins

.row--stacked
    flex-direction: column

.row--wrap
    flex-wrap: wrap

.column
    padding: 10px
    flex: auto
    min-width: 200px

for i in 12 25 50
    .column--{i}
        width: ($container-max-width * (i / 100)) - 20

.main
    margin: 0
    display: flex
    flex-direction: column
    flex: 1 1 auto

.content
    width: 100%
    max-width: $container-max-width
    margin: auto
    flex: auto
    padding: 0 20px
    img
        display: block
        margin: auto

@require 'typography'
@require 'lists'
@require 'header'
@require 'cards'
@require 'search'
@require 'footer'
@require 'spinner'
@require 'contact'
